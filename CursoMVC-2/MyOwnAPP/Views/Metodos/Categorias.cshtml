                            })
                        }
                    }
                )
            });
        });
        function abrirModal(Json) {
            $('#txtId').val("0");
            $('#Descripcion').val("");
            $('#txtActive').val("");

            if (Json != null) {
                $('#txtId').val(Json.IdUsuario);
                $('#Descripcion').val(Json.Nombres)
                $('#txtActive').val(Json.Activo == true ? 1:0)
            }
            $('#modalCategorias').modal("show");
        }
        function guardar() {
            var Categoria = {
                Activo: $('#txtActive').val()==1 ? true: false,
                Descripcion: $('#Descripcion').val(),
                IdCategoria: $('#txtId').val(),

            }

            jQuery.ajax({
                url: '@Url.Action("GuardarCategoria", "Metodos")',
                type: 'POST',
                data: JSON.stringify({ obj: Usuario }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $('.modal-body').LoadingOverlay("show");
                    //  Usuario Nuevo
                    if (Categoria.IdCategoria == 0) {
                        if (data.resultado != 0) {
                            Categoria.IdCategoria = data.resultado;
                            tabladata.row.add(Categoria).draw(false);
                            $('#GuardarCategoria').modal("hide");
                        } else {
                            $('#mensajeError').text(data.mensaje);
                            $('#mensajeError').show();
                        }
                        //  Usuario EDITADO
                    } else {
                        if (data.resultado) {
                            var rowIndex = tabladata.row(function (idx, data, node) {
                                return data.IdCategoria === Categoria.IdCategoria;
                            }).index();

                            if (rowIndex !== null) {
                                tabladata.row(rowIndex).data(Categoria).draw(false);
                            }

                            $('#GuardarCategoria').modal("hide");
                        } else {
                            $('#mensajeError').text(data.mensaje);
                            $('#mensajeError').show();
                        }
                    }
                },
                error: function (data) {
                    $('.modal-body').LoadingOverlay("hide");
                    $('#mensajeError').text("Error AJAX");
                    $('#mensajeError').show();
                },
                beforeSend: function (data) {
                    $('.modal-body').LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 12
                    })
                },
            })
        }

    </script>
}
